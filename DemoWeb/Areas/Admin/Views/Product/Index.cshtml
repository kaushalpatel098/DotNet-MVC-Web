@model List<Product>
<div class="container">
    <partial name="_Notifications" />
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h2 class="text-primary">
                Product List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i>  Create a new product listing
            </a>
        </div>
    </div>
    <table class="table table-secondary table-bordered">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Description
                </th>
                <th>
                    ISBN
                </th>
                <th>
                    Author
                </th>
                <th>
                    List Price
                </th>
                <th>
                    Price for 1-50
                </th>
                <th>
                    Price for 51-100
                </th>
                <th>
                    Price for 100+
                </th>
                <th>
                    Category
                </th>
                <th>
                    Operations
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td> @product.Title</td>
                    <td> @product.Description</td>
                    <td>@product.ISBN</td>
                    <td>@product.Author</td>
                    <td>@product.ListPrice</td>
                    <td>@product.Price</td>
                    <td>@product.Price50</td>
                    <td>@product.Price100</td>
                    <td>@product.Category.Name</td>
                    <td>
                        <div class="btn-group w-75" role="group">
                            <a asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class=" btn btn-primary mx-1" style="border-radius: 10px;">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger mx-1" style="border-radius: 10px;">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

