@model List<Category>
<div class="container">
    <partial name="_Notifications" />
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
       <div class="col-6 text-end">
           <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i>  Create a new category
           </a>
       </div>
    </div>
 <table class="table table-secondary table-bordered">
     <thead>
         <tr>
         <th>
             Cateogry Name
         </th>
         <th>
             Display Order
          </th>
          <th>
              Operations
          </th>
         </tr>
     </thead>
     <tbody>
        @foreach(var category in Model)
        {
            <tr>
                <td> @category.Name</td>
                <td>@category.DisplayOrder</td>
                <td>
                    <div class="btn-group w-75" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.ID" class=" btn btn-primary mx-1" style="border-radius: 10px;">
                                <i class="bi bi-pencil-square"></i> Edit
                        </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.ID" class="btn btn-danger mx-1" style="border-radius: 10px;">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
 </table>
</div>
